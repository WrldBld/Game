# WrldBldr Environment Configuration
# Copy this file to .env and fill in your actual values

# Neo4j Database
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password_here
NEO4J_DATABASE=neo4j

# Ollama LLM API (OpenAI-compatible)
OLLAMA_BASE_URL=http://127.0.0.1:11434/v1
OLLAMA_MODEL=gpt-oss:20b

# ComfyUI Asset Generation
COMFYUI_BASE_URL=http://127.0.0.1:8188

# Server Configuration
SERVER_PORT=3000

# CORS Configuration
# Comma-separated list of allowed origins, or "*" for any (insecure)
# Examples: "http://localhost:8080,http://localhost:3000" or "*"
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000,http://127.0.0.1:8080,http://127.0.0.1:3000

# Logging
RUST_LOG=wrldbldr_engine=debug,tower_http=debug

# Server Bind Configuration
SERVER_HOST=0.0.0.0

# Asset Paths
ASSET_BASE_PATH=./data/assets
GENERATED_ASSETS_PATH=./data/generated_assets
WORKFLOW_PATH=./workflows

# Game Content Data
# Path to 5etools data directory for D&D 5e content (optional)
# Download from: https://github.com/5etools-mirror-3/5etools-src
# FIVETOOLS_DATA_PATH=/path/to/5etools-src
